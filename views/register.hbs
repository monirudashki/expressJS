<section id="register-section" class="">

    <h1 class="item">Register</h1>

    <main class="item padded align-center">

        <form class="align-center" method="post" action="/auth/register">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <div class="col aligned">
                <label><span>Username</span><input type="text" name="username"></label>
                <label><span>Password</span><input type="password" name="password"></label>
                <label><span>Repeat Password</span><input type="password" name="rePass"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <div class="align-center">
                    <input class="action" type="submit" value="Register">
                </div>
            </div>

        </form>
        <footer class="padded">If already have account <a href="/auth/login">click here</a></footer>
    </main>

</section>