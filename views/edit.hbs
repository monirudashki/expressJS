<section id="edit-section" class="">

    <h1 class="item">Edit Accomodation</h1>

    <main class="item padded align-center">

        <form class="layout left large" method="post" action="/room/{{room._id}}/edit">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <div class="col aligned">
                <label><span>Name</span><input type="text" name="name" value={{room.name}}></label>
                <label><span>City</span><input type="text" name="city" value={{room.city}}></label>
                <label><span>Beds</span><input type="number" name="beds" value={{room.beds}}></label>
                <label><span>Price per night</span><input type="number" name="price" value={{room.price}}></label>
                <label><span>Image URL</span><input type="text" name="imgUrl" value={{room.imgUrl}}></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{room.description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Edit">
                </div>
            </div>

        </form>

    </main>

</section>