<section id="catalog-section">
    <h1 class="item">{{room.name}}</h1>
    <div class="item padded">

        <main class="layout right large">

            <div class="col">

                <img src="{{room.imgUrl}}" class="img-large">

            </div>

            <div class="content pad-med">
                <p>Facilities: </p>
                 
                 <form action="/facility/{{room._id}}/decorateRoom" method="post">
                <ul class="catalog">
                    {{#each facilities}}
                    <li><label><input type="checkbox" name="{{_id}}" {{#if checked}}checked{{/if}}> {{label}} <img class="facility-icon"
                                    src=""></label></li>
                    {{/each}}
                </ul>

                <button class="action cta">Edit Facilities</button>
                </form>
            </div>
        </main>

        <footer>Listed by (TODO add owner)</footer>
    </div>
</section>