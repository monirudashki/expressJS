<section id="login-section" class="">

    <h1 class="item">Login</h1>

    <main class="item padded align-center">

        <form class="align-center" method="post" action="/auth/login">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <div class="col aligned">
                <label><span>Username</span><input type="text" name="username"></label>
                <label><span>Password</span><input type="password" name="password"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <div class="align-center">
                    <input class="action" type="submit" value="Login">
                </div>
            </div>

        </form>
        
        <footer class="padded">If don't have account<a href="/auth/register">click here</a></footer>
    </main>

</section>